<Window x:Class="AppForWorking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Button Move Mega Game Hi Fi Wi Fi Cats Rule The World" Height="458" Width="606" ResizeMode="NoResize" KeyDown="Window_KeyDown" Closed="Window_Closed">
	<Grid x:Name="MainGrid" Margin="0" Height="390" VerticalAlignment="Top">
		<Grid.Background>
			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
				<GradientStop Color="#FF7FB5C5" Offset="0"/>
				<GradientStop Color="#FFB66D6D" Offset="1"/>
			</LinearGradientBrush>
		</Grid.Background>
		<Button x:Name="Me" Content="Me" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Height="40" Foreground="White" FontWeight="Bold" Margin="27,213,0,0">
			<Button.Background>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF5786A6" Offset="0"/>
					<GradientStop Color="#FF79A461" Offset="1"/>
				</LinearGradientBrush>
			</Button.Background>
		</Button>
		<Label x:Name="Info" Content="En2 has joined!" Margin="0,390,0,-41" Background="#FF314247" FontSize="16" FontFamily="Arial" ScrollViewer.VerticalScrollBarVisibility="Disabled" Foreground="Gray" Padding="10,5,10,0"/>
	</Grid>
</Window>
